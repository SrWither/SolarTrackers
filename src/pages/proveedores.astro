---
import Layout from "../layout/Layout.astro";
---

<Layout title="Proveedores">
  <section class="py-10">
    <div class="container mx-auto px-4">
      <h1 class="text-3xl font-bold text-center mb-6 text-lime-500 dark:text-lime-400">
        Proveedores
      </h1>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Soltec -->
        <a 
          href="https://soltec.com/es/soluciones/productos/" 
          target="_blank" 
          class="group block bg-white dark:bg-gray-800 shadow-md rounded-lg overflow-hidden hover:shadow-lg transform hover:scale-105 transition">
          <div class="p-5">
            <h2 class="text-xl font-bold text-gray-700 dark:text-gray-100 mb-3 group-hover:text-lime-500">
              Soltec
            </h2>
            <p class="text-sm text-gray-600 dark:text-gray-300">
              Soluciones avanzadas para generación solar, incluyendo sistemas de seguimiento.
            </p>
          </div>
        </a>

        <!-- ENGIE -->
        <a 
          href="https://www.engiemexico.com/soluciones/generacion-renovable" 
          target="_blank" 
          class="group block bg-white dark:bg-gray-800 shadow-md rounded-lg overflow-hidden hover:shadow-lg transform hover:scale-105 transition">
          <div class="p-5">
            <h2 class="text-xl font-bold text-gray-700 dark:text-gray-100 mb-3 group-hover:text-lime-500">
              ENGIE
            </h2>
            <p class="text-sm text-gray-600 dark:text-gray-300">
              Energía renovable con soluciones sostenibles adaptadas a tus necesidades.
            </p>
          </div>
        </a>

        <!-- VentDepot -->
        <a 
          href="https://www.ventdepot.com/c/KKR/1/Generaci%C3%B3n-El%C3%A9ctrica-SolarTracker.html" 
          target="_blank" 
          class="group block bg-white dark:bg-gray-800 shadow-md rounded-lg overflow-hidden hover:shadow-lg transform hover:scale-105 transition">
          <div class="p-5">
            <h2 class="text-xl font-bold text-gray-700 dark:text-gray-100 mb-3 group-hover:text-lime-500">
              VentDepot
            </h2>
            <p class="text-sm text-gray-600 dark:text-gray-300">
              Especialistas en soluciones de generación eléctrica y Solar Trackers.
            </p>
          </div>
        </a>

        <!-- Arctech Solar -->
        <a 
          href="https://spanish.arctechsolar.com/gzxt" 
          target="_blank" 
          class="group block bg-white dark:bg-gray-800 shadow-md rounded-lg overflow-hidden hover:shadow-lg transform hover:scale-105 transition">
          <div class="p-5">
            <h2 class="text-xl font-bold text-gray-700 dark:text-gray-100 mb-3 group-hover:text-lime-500">
              Arctech Solar
            </h2>
            <p class="text-sm text-gray-600 dark:text-gray-300">
              Soluciones solares avanzadas con sistemas de alta eficiencia.
            </p>
          </div>
        </a>

        <!-- SunPower México -->
        <a 
          href="https://pdf.archiexpo.es/pdf/sunpower/seguidor-solar/54500-27868.html" 
          target="_blank" 
          class="group block bg-white dark:bg-gray-800 shadow-md rounded-lg overflow-hidden hover:shadow-lg transform hover:scale-105 transition">
          <div class="p-5">
            <h2 class="text-xl font-bold text-gray-700 dark:text-gray-100 mb-3 group-hover:text-lime-500">
              SunPower México
            </h2>
            <p class="text-sm text-gray-600 dark:text-gray-300">
              Innovación en paneles solares y sistemas de seguimiento para mayor rendimiento.
            </p>
          </div>
        </a>

        <!-- Suncore -->
        <a 
          href="https://suncore.com.mx/" 
          target="_blank" 
          class="group block bg-white dark:bg-gray-800 shadow-md rounded-lg overflow-hidden hover:shadow-lg transform hover:scale-105 transition">
          <div class="p-5">
            <h2 class="text-xl font-bold text-gray-700 dark:text-gray-100 mb-3 group-hover:text-lime-500">
              Suncore
            </h2>
            <p class="text-sm text-gray-600 dark:text-gray-300">
              Expertos en soluciones integrales de energía solar en México.
            </p>
          </div>
        </a>
      </div>
    </div>
  </section>
</Layout>
